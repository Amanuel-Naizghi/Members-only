<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Members Only</title>
    <link rel="stylesheet" href="/styles/home.css">
</head>
<body>
    <div class="home-page-container">
        <div class="header-container">
          <div class="members-container">
            <img src="/images/members.png" alt="Members" width="50px" height="50px">
            <p class="logo-name">Members Only</p>
          </div>
          <div class="login-register-container">
            <a href="/">Logout</a>
            <div class="admin">
                <img src="/images/admin.png" alt="Home" width="25px" height="25px">
                <p><%= locals.user.toUpperCase() %></p>
            </div>
          </div>
        </div>
        <hr>
        <div class="home-content-container">
          <div class="home-content-header">
            <h2>Welcome <%= locals.user.toUpperCase() %></h2>
          </div>
          <a class="create-post" href="/createPost">+ Create a post</a>
          <% if (locals.data) {%>
            <% data.forEach((data) => { %>
                <div class="message-container">
                    <form action="/<%= data.id %>/delete" method="post">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete it?');">Delete</button>
                    </form>
                    <div class="title-creator">
                        <p><%= data.title %></p>
                        <p><%= data.firstname%> <%= data.lastname%></p> 
                    </div>
                    <p><%= data.message %></p>
                    <p class="date"><%= data.formatted_date %></p> 
                </div>
            <% }); %>
          <% } %>
        </div>
        <hr>
        <div class='footer'>
          <p>Â© 2025 Amanuel Tesfatsion (The Odin Projects) All rights reserved.</p>
        </div> 
      </div>
</body>
</html>